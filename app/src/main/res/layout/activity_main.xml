<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backimg" />

    <LinearLayout
        android:id="@+id/content_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content_box1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/content_box2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom" />

            <androidx.cardview.widget.CardView
                android:id="@+id/mCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#ffffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="15dp"
                                app:cardBackgroundColor="#ffffffff"
                                app:cardCornerRadius="35dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/img_header"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/headimg" />

                            </androidx.cardview.widget.CardView>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/title_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom|left"
                                android:text="柠檬"
                                android:textColor="#ff444444"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="10dp">

                                <LinearLayout
                                    android:id="@+id/progress"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_gravity="center"
                                    android:orientation="vertical" />
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <FrameLayout
                                    android:layout_width="20dp"
                                    android:layout_height="20dp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/lv6" />
                                </FrameLayout>

                                <TextView
                                    android:id="@+id/title_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:gravity="left|center"
                                    android:text="还有05:20:30过期"
                                    android:textColor="#ff444444"
                                    android:textSize="10dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>



                        <FrameLayout
                            android:layout_width="35dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/color_setting"

                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:src="@drawable/color"
                                />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="35dp"
                            android:id="@+id/addTG"
                            android:visibility="gone"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="26dp"
                                android:id="@+id/addTGTmag"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:src="@drawable/xvfei"
                                />
                        </FrameLayout>










                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:id="@+id/isMagiskInit"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/InitLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/init"
                                    app:tint="#FF333333" />

                                <TextView
                                    android:id="@+id/isInit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="初始化"
                                    android:textColor="#FF9B9B9B"
                                    android:textSize="11dp" />

                            </LinearLayout>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="3px"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="#FFdddddd"
                                android:orientation="vertical" />

                        </FrameLayout>





                        <FrameLayout
                            android:layout_width="3px"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="#FFdddddd"
                                android:orientation="vertical" />

                        </FrameLayout>



                        <FrameLayout
                            android:layout_width="3px"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="#FFdddddd"
                                android:orientation="vertical" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/infoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/info"
                                    app:tint="#FF333333" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="最新公告"
                                    android:textColor="#FF9B9B9B"
                                    android:textSize="11dp" />

                            </LinearLayout>

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="3px"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="#FFdddddd"
                                android:orientation="vertical" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/listLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/list"
                                    app:tint="#FF333333" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="更新日志"
                                    android:textColor="#FF9B9B9B"
                                    android:textSize="11dp" />

                            </LinearLayout>



                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="3px"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:background="#FFdddddd"
                                android:orientation="vertical" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/CleanLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/cleant"
                                    app:tint="#FF333333" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:gravity="center"
                                    android:text="过隔离"
                                    android:textColor="#FF9B9B9B"
                                    android:textSize="11dp" />

                            </LinearLayout>



                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF"
            android:clipChildren="false"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/mFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.kmxs.reader.core.view.LoadView
                    android:id="@+id/start_load"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/score_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="000"
                        android:textColor="#FFEEEEEE"
                        android:textSize="50dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:text="功能启动进度"
                        android:textColor="#FFAAAAAA"
                        android:textSize="14dp" />
                </com.kmxs.reader.core.view.LoadView>


            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/start_float"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="拉起游戏"
                    android:textColor="#FFFFFFFF"
                    android:textSize="13dp" />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/app_info"
                android:textColor="#FFFFFFFF"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mFrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="#FF4195F8"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/mFrameLayout2"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="26dp"
                    android:id="@+id/rootMode"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/root"
                    app:tint="#ff444444" />
            </FrameLayout>


            <TextView
                android:id="@+id/custom_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0"
                android:elevation="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="科技"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/setting"
                    app:tint="#ff444444" />
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>
</FrameLayout>